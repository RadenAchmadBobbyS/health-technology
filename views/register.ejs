<!DOCTYPE html>
<html lang="en" data-theme="cupcake">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <%- include('parts/script') %>
  </head>
  <body>
    <%- include('parts/navbar', {userLogin: userLogin}) %>
    <div class="p-8 w-full max-h-screen">
      <form
        action="/register"
        method="post"
        class="flex flex-col justify-start items-center w-full"
      >
        <h1 class="text-2xl font-bold my-4">Register</h1>
        <% if (admin) { %>
        <p class="italic mb-2">Admin Register</p>
        <% } %>

        <fieldset class="fieldset h-20">
          <label class="input min-w-xs">
            <svg
              class="h-[1em] opacity-50"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
            >
              <g
                stroke-linejoin="round"
                stroke-linecap="round"
                stroke-width="2.5"
                fill="none"
                stroke="currentColor"
              >
                <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
              </g>
            </svg>
            <input type="input" placeholder="Username" name="username" />
          </label>
          <% if (errors && errors.username) { %>
          <p
            class="fieldset-label text-red-600 flex justify-center items-center"
          >
            <%= errors.username %>
          </p>
          <% } %>
        </fieldset>

        <fieldset class="fieldset h-20">
          <label class="input min-w-xs">
            <svg
              class="h-[1em] opacity-50"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
            >
              <g
                stroke-linejoin="round"
                stroke-linecap="round"
                stroke-width="2.5"
                fill="none"
                stroke="currentColor"
              >
                <rect width="20" height="16" x="2" y="4" rx="2"></rect>
                <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
              </g>
            </svg>
            <input type="email" placeholder="mail@site.com" name="email" />
          </label>
          <% if (errors && errors.email) { %>
          <p
            class="fieldset-label text-red-600 flex justify-center items-center"
          >
            <%= errors.email %>
          </p>
          <% } %>
        </fieldset>

        <fieldset class="fieldset h-20">
          <label class="input min-w-xs">
            <svg
              class="h-[1em] opacity-50"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
            >
              <g
                stroke-linejoin="round"
                stroke-linecap="round"
                stroke-width="2.5"
                fill="none"
                stroke="currentColor"
              >
                <path
                  d="M2.586 17.414A2 2 0 0 0 2 18.828V21a1 1 0 0 0 1 1h3a1 1 0 0 0 1-1v-1a1 1 0 0 1 1-1h1a1 1 0 0 0 1-1v-1a1 1 0 0 1 1-1h.172a2 2 0 0 0 1.414-.586l.814-.814a6.5 6.5 0 1 0-4-4z"
                ></path>
                <circle cx="16.5" cy="7.5" r=".5" fill="currentColor"></circle>
              </g>
            </svg>
            <input type="password" placeholder="Password" name="password" />
          </label>
          <% if (errors && errors.password) { %>
          <p
            class="fieldset-label text-red-600 flex justify-center items-center"
          >
            <%= errors.password %>
          </p>
          <% } %>
        </fieldset>

        <% if (admin) { %>
        <select class="input select" name="role">
          <option value="admin" selected>Admin</option>
          <option value="user">User</option>
        </select>
        <% } %>
        <button type="submit" class="btn btn-primary text-primary-content mt-2">
          Register
        </button>
      </form>
    </div>
  </body>
</html>
